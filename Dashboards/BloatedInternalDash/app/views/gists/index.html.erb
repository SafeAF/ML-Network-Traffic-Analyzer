<p id="notice"><%= notice %></p>

<h1>Listing Gists</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>User</th>
      <th>Member</th>
      <th>Name</th>
      <th>Total files</th>
      <th>Description</th>
      <th>Total size</th>
      <th>Github</th>
      <th>Git</th>
      <th>Project</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gists.each do |gist| %>
      <tr>
        <td><%= gist.owner %></td>
        <td><%= gist.user %></td>
        <td><%= gist.member %></td>
        <td><%= gist.name %></td>
        <td><%= gist.total_files %></td>
        <td><%= gist.description %></td>
        <td><%= gist.total_size %></td>
        <td><%= gist.github %></td>
        <td><%= gist.git %></td>
        <td><%= gist.project %></td>
        <td><%= gist.content %></td>
        <td><%= link_to 'Show', gist %></td>
        <td><%= link_to 'Edit', edit_gist_path(gist) %></td>
        <td><%= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


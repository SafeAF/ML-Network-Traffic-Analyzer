<p id="notice"><%= notice %></p>

<h1>Listing Todos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Eta</th>
      <th>Estimated manhours</th>
      <th>Total manhours</th>
      <th>Ratio actual manhours</th>
      <th>Details</th>
      <th>Tasklist</th>
      <th>User</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.desc %></td>
        <td><%= todo.eta %></td>
        <td><%= todo.estimated_manhours %></td>
        <td><%= todo.total_manhours %></td>
        <td><%= todo.ratio_actual_manhours %></td>
        <td><%= todo.details %></td>
        <td><%= todo.tasklist %></td>
        <td><%= todo.user %></td>
        <td><%= todo.priority %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>

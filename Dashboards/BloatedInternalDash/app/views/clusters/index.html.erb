<p id="notice"><%= notice %></p>

<h1>Listing Clusters</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Infrastructure</th>
      <th>Name</th>
      <th>Cluster type</th>
      <th>Members</th>
      <th>Resource manager</th>
      <th>Information</th>
      <th>Status</th>
      <th>Details</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clusters.each do |cluster| %>
      <tr>
        <td><%= cluster.user %></td>
        <td><%= cluster.infrastructure %></td>
        <td><%= cluster.name %></td>
        <td><%= cluster.cluster_type %></td>
        <td><%= cluster.members %></td>
        <td><%= cluster.resource_manager %></td>
        <td><%= cluster.information %></td>
        <td><%= cluster.status %></td>
        <td><%= cluster.details %></td>
        <td><%= cluster.organization %></td>
        <td><%= link_to 'Show', cluster %></td>
        <td><%= link_to 'Edit', edit_cluster_path(cluster) %></td>
        <td><%= link_to 'Destroy', cluster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


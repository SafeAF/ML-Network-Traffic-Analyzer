<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%= current_user.username if signed_in? %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- search form (Optional) -->

    <%= render "globalsearchform" %>

    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">Internal Dashboard</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="active"><a href="/main/index"><i class='fa fa-link'></i> <span>Main Dashboard</span></a></li>
      <li><a href="/organization"><i class='fa fa-link'></i> <span>Organization</span></a></li>

      <li class="treeview">
        <a href="/servers"><i class='fa fa-link'></i> <span>Servers</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
          <li><a href="/processes">Processes</a></li>
          <li><a href="/nodes">Nodes</a></li>
        </ul>
      </li>

      <li class="treeview">
        <a href="/projects"><i class='fa fa-link'></i> <span>Projects</span> <i class="fa fa-angle-left
        pull-right"></i></a>
        <ul class="treeview-menu">
          <li><%= link_to "projects" %></li>

          <li><%= link_to "issuelists"  %></li>
          <li><a href="/projects/tasklist">Tasklists</a></li>
        </ul>
      </li>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>

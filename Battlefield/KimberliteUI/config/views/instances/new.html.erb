<div class="kl-form">
<!-- :url => { :controller => 'instances',
                :action => 'create', :id => @machine.id } -->
<%= form_for (@instance) do |f| %>
<% if @instance.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@instance.errors.count, "error") %>
    prohibited this product from being saved:</h2>
    <ul>
    <% @instance.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


  <fieldset>
  <legend>Enter Instance Details</legend>
  <div>
<!-- Create a table with instance types, make this load dynamically -->
    <%= f.label 'Service to Monitor' %>:
    <%= f.select :instance_type, @types %>
  </div>

  <div>
    <%= f.label 'Name' %>:
    <%= f.text_field :human_name, :size => 40 %>
  </div>
  <div>
    <%= f.label :description %>:
    <%= f.text_field :description, :size => 40 %>
  </div>


  <div>
    <%= hidden_field_tag :machine_id, @machine.id %>
    <%= f.submit "Add Instance", {:controller => 'instances', 
		:action => 'create', :class => 'btn' } %>
  </div>

  </fieldset>
<% end %>


</div>

<p id="notice"><%= notice %></p>

<h1>Listing Tables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rows</th>
      <th>Row headings</th>
      <th>Content</th>
      <th>Columns</th>
      <th>Columns count</th>
      <th>Application</th>
      <th>Database</th>
      <th>Purpose</th>
      <th>Criticality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.name %></td>
        <td><%= table.rows %></td>
        <td><%= table.row_headings %></td>
        <td><%= table.content %></td>
        <td><%= table.columns %></td>
        <td><%= table.columns_count %></td>
        <td><%= table.application %></td>
        <td><%= table.database %></td>
        <td><%= table.purpose %></td>
        <td><%= table.criticality %></td>
        <td><%= link_to 'Show', table %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


 <div class="row">
 <div class="span9">

<h3>Assets Monitored</h3>
 <table class="table table-striped table-bordered">
  <thead>
   <tr>
    <th><b>  </b></th>
	<th>Machines</th>
    <th>Instances</th>

   </tr>
   </thead>



    <tbody>


  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
	<td><i class="icon-th-large"></i>Total</td>
	<td><span class="badge badge-info"><%= @machine_sums[:total] %></span></td>
	<td><span class="badge badge-info"><%= @instance_sums[:total] %></span></td>

	<tr>
	<td><i class="icon-arrow-up"></i>Running</td>
	<td><span class="badge badge-success"><%= @machine_sums[:running] %></span></td>
	<td><span class="badge badge-success"><%= @instance_sums[:running] %></span></td>
	</tr>

	<tr>
	<td><i class="icon-arrow-down"></i>Down</td>
	<td><span class="badge badge-error"><%= @machine_sums[:down] %></span></td>
	<td><span class="badge badge-error"><%= @instance_sums[:down] %></span></td>
	</tr>

 </tr>
 
  </tbody>
</table>

